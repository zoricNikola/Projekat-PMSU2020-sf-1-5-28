<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projekat_pmsu2020_sf_1_5_28">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".activities.settingActivities.SettingsActivity"/>
        <activity android:name=".activities.emailActivities.CreateEmailActivity" />
        <activity android:name=".activities.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.contactActivities.CreateContactActivity" />
        <activity android:name=".activities.login.LoginActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.folderActivities.FolderDetailsActivity"/>
        <activity android:name=".activities.profile.CreateAccountActivity"/>
        <activity android:name=".activities.login.RegisterActivity"/>
    </application>
</manifest>
